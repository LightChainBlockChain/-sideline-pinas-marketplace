# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/sideline-pinas

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@sidelinepinas.com
FROM_NAME=Sideline Pinas

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Philippine Payment Gateways
# GCash
GCASH_MERCHANT_ID=your-gcash-merchant-id
GCASH_SECRET_KEY=your-gcash-secret-key
GCASH_API_URL=https://api.gcash.com

# PayMaya
PAYMAYA_PUBLIC_KEY=your-paymaya-public-key
PAYMAYA_SECRET_KEY=your-paymaya-secret-key
PAYMAYA_API_URL=https://pg-sandbox.paymaya.com

# UnionBank
UNIONBANK_PARTNER_ID=your-unionbank-partner-id
UNIONBANK_PARTNER_SECRET=your-unionbank-partner-secret
UNIONBANK_API_URL=https://api-uat.unionbankph.com

# BPI
BPI_API_KEY=your-bpi-api-key
BPI_API_SECRET=your-bpi-api-secret
BPI_API_URL=https://api.bpi.com.ph

# Paymongo (Alternative payment gateway)
PAYMONGO_PUBLIC_KEY=your-paymongo-public-key
PAYMONGO_SECRET_KEY=your-paymongo-secret-key

# Stripe (International payments)
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# Blockchain Configuration
WEB3_PROVIDER_URL=https://polygon-mainnet.infura.io/v3/YOUR-PROJECT-ID
PRIVATE_KEY=your-wallet-private-key-for-contract-deployment
NFT_CONTRACT_ADDRESS=your-deployed-nft-contract-address

# IPFS Configuration
IPFS_PROJECT_ID=your-ipfs-project-id
IPFS_PROJECT_SECRET=your-ipfs-project-secret
IPFS_GATEWAY=https://ipfs.io/ipfs/

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# SMS Configuration (for OTP)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.semaphore.co

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Analytics
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Social Media
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# CDN Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=sideline-pilipinas-assets

# Transaction Fees
PLATFORM_FEE_PERCENTAGE=10
PAYMENT_PROCESSING_FEE=2.5

# Early User Incentives
EARLY_USER_LIMIT=100
EARLY_USER_SIGNUP_REWARD_TOKENS=5
EARLY_USER_DISCOUNT_RATE=0.2

# Auction Configuration
AUCTION_EXTENSION_TIME=300
MINIMUM_BID_INCREMENT=10

# Mining / Rewards Configuration
MINING_ENABLED=true
MINING_DAILY_REWARD=1            # tokens per daily claim
MINING_DAILY_COOLDOWN_HOURS=24   # hours between claims
MINING_MAX_BALANCE=1000          # soft cap for mined tokens per user

# Faucet Integration (optional)
FAUCET_WEBHOOK_URL=
FAUCET_API_KEY=
FAUCET_CHAIN_ID=137              # e.g., Polygon mainnet; set to 80001 for Mumbai testnet

# App Configuration
APP_NAME=Sideline Pinas
APP_VERSION=1.0.0
SUPPORT_EMAIL=support@sidelinepinas.com
