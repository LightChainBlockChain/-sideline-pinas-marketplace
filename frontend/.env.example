# ðŸŒŸ Sideline Pilipinas - Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000

# Web3 Configuration
REACT_APP_INFURA_PROJECT_ID=your_infura_project_id
REACT_APP_NETWORK_ID=1
REACT_APP_CHAIN_ID=1

# Payment Configuration
REACT_APP_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
REACT_APP_GCASH_MERCHANT_ID=your_gcash_merchant_id
REACT_APP_PAYMAYA_PUBLIC_KEY=your_paymaya_public_key

# IPFS Configuration
REACT_APP_IPFS_GATEWAY=https://ipfs.io/ipfs/
REACT_APP_PINATA_API_KEY=your_pinata_api_key

# Application Settings
REACT_APP_ENVIRONMENT=development
REACT_APP_APP_NAME=Sideline Pilipinas
REACT_APP_VERSION=1.0.0

# Analytics (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_id
REACT_APP_FACEBOOK_PIXEL_ID=your_fb_pixel_id

# Feature Flags
REACT_APP_ENABLE_NFT_TRADING=true
REACT_APP_ENABLE_AUCTION_SYSTEM=true
REACT_APP_ENABLE_WALLET_CONNECT=true
